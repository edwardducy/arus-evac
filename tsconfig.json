{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM"],
		"types": ["vite/client", "node"]
	},
	"include": ["src", "vite.*.config.ts", "forge.config.ts", "forge.env.d.ts"]
}
